@using InsuranceQuote.ViewModels
@model List<QuoteVM>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 cold-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var quote in Model)
            {
                {
                    <input type="hidden" name="Id" value="@quote.Id" />
                    <div class="row mb-3">
                        <div class="col-2">
                            @quote.FirstName
                        </div>
                        <div class="col">
                            @quote.LastName
                        </div>
                        <div class="col-4">
                            @quote.EmailAddress
                        </div>
                        <div class="col">
                            $@decimal.Round((decimal)quote.Cost, 2, MidpointRounding.AwayFromZero)
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>