<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-4 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Car Insurance Quote</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Inquiry", "Home", FormMethod.Post))
            {
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="firstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="lastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="emailAddress" type="email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="dateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="year" type="number" min="1950" max="2020" class="form-control" placeholder="Year" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="make" type="text" class="form-control" placeholder="Make" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="model" type="text" class="form-control" placeholder="Model" />
                    </div>
                    <div class="form-group col-md-12">
                        <label class="form-check-label ml-1" for="dui">Have you had a DUI before?</label>
                        <input name="dui" value="true" type="checkbox" class="form-check-input ml-1" id="dui" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="tickets" type="number" min="0" class="form-control" placeholder="# of Speeding Tickets" />
                    </div>
                    <div class="form-group col-md-12">
                        <select name="coverage" id="coverage" class="browser-default custom-select">
                            <option selected>Coverage Type</option>
                            <option value="Full Coverage">Full Coverage</option>
                            <option value="Liability Only">Liability Only</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>
